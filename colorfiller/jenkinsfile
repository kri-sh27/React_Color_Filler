pipeline {
     agent {
        docker { image 'node:16-alpine' }
      }

    stages {


        // stage('Install') {
        //     steps {
        //         nodejs(nodeJSInstallationName: 'Node 6.x', configId: '<config-file-provider-id>') {
        //             sh 'npm config ls'
        //         }
        //     }
        // }

        stage('Checkout') {
            steps {
                
                checkout scm
            }
        }

                stage('Pull Docker Image') {
            steps {
                script {
                    // Pull the Node.js Alpine image
                    docker.image('node:16-alpine').pull()
                }
            }
        }


        stage('Install Dependencies') {
            steps {
                // sh 'sudo apt install nodejs'
                 dir('colorfiller/') {
                sh 'npm install'
            }
            }
        }

        stage('Build') {
            steps {
                sh 'npm run build'
            }
        }

        
    }

    post {
        success {
            echo 'Build successful! You can deploy your app now.'
        }
        failure {
            echo 'Build failed. Please check the build logs for details.'
        }
    }
}
