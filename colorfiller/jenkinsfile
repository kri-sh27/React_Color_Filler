pipeline {
     agent {
        docker { image 'node:16-alpine'
                    args '-v /var/run/docker.sock:/var/run/docker.sock' // Mount the Docker socket
 }
      }

    stages {


        // stage('Install') {
        //     steps {
        //         nodejs(nodeJSInstallationName: 'Node 6.x', configId: '<config-file-provider-id>') {
        //             sh 'npm config ls'
        //         }
        //     }
        // }

        stage('Checkout') {
            steps {
                
                checkout scm
            }
        }
        

             stage('Pull Docker Image') {
            steps {
                script {
                    def dockerVersion = '24.0.6'
                    sh "/usr/bin/docker${dockerVersion} pull node:16-alpine"
                }
            }
        }
stage('Check Environment') {
    steps {
        script {
            // Print the environment variables to the console
            sh 'env'
        }
    }
}



        stage('Install Dependencies') {
            steps {
                // sh 'sudo apt install nodejs'
                 dir('colorfiller/') {
                sh 'npm install'
            }
            }
        }

        stage('Build') {
            steps {
                sh 'npm run build'
            }
        }

        
    }

    post {
        success {
            echo 'Build successful! You can deploy your app now.'
        }
        failure {
            echo 'Build failed. Please check the build logs for details.'
        }
    }
}
