pipeline {
    agent any
     environment {
        NODEJS_HOME = tool(name: 'CustomNodeJS', type: 'Tool')
        PATH = "${env.CUSTOM_NODEJS_HOME}/bin:${env.PATH}"
    }

    stages {


        // stage('Install') {
        //     steps {
        //         nodejs(nodeJSInstallationName: 'Node 6.x', configId: '<config-file-provider-id>') {
        //             sh 'npm config ls'
        //         }
        //     }
        // }

        stage('Checkout') {
            steps {
                
                checkout scm
            }
        }

        stage('Install Dependencies') {
            steps {
                // sh 'sudo apt install nodejs'
                sh 'npm install'
            }
        }

        stage('Build') {
            steps {
                sh 'npm run build'
            }
        }

        
    }

    post {
        success {
            echo 'Build successful! You can deploy your app now.'
        }
        failure {
            echo 'Build failed. Please check the build logs for details.'
        }
    }
}
